                           title="CREATE_BOOK_FROM_SELECTION">
                </subaction>
                  <subaction tooltip="NUM" target="make_act_num" 
                           condition="cursorInSection:B([0-9]*) :and: textSelected:true"
                           title="NUM">
                </subaction>
                 <subaction tooltip="HEADING" target="make_act_heading"
