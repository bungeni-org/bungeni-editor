<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="BungeniConnectorPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>org.bungeni.connector.entity.Committee</class>
    <class>org.bungeni.connector.entity.Judge</class>
    <class>org.bungeni.connector.entity.Judgement</class>
    <class>org.bungeni.connector.entity.JudgementParty</class>
    <class>org.bungeni.connector.entity.Question</class>
    <class>org.bungeni.connector.entity.JudgementJudge</class>
    <class>org.bungeni.connector.entity.Party</class>
    <class>org.bungeni.connector.entity.TabledDocument</class>
    <class>org.bungeni.connector.entity.Bill</class>
    <class>org.bungeni.connector.entity.Motion</class>
    <class>org.bungeni.connector.entity.Person</class>
    <class>org.bungeni.connector.entity.MetadataInfo</class>
    <properties>
      <property name="hibernate.connection.username" value="sa"/>
      <property name="hibernate.connection.driver_class" value="org.h2.Driver"/>
      <property name="hibernate.connection.password" value=""/>
      <property name="hibernate.connection.url" value="jdbc:h2:tcp://localhost/registry.db"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
    </properties>
  </persistence-unit>
</persistence>
