<toolbar>
    <root lang="en" title="Editor Actions" visible="true" >
        <actionGroup name="blockActions" title="Structural Markup" visible="true">
    	    <action name="Masthead.selection" tooltip="Header for judgement" title="Header"  target="null" visible="true" condition="none" showChildren="true" >
     	          <subaction name="Root" title="Create Judgement Body" visible="true" condition="sectionNotExists:judgement :and: textSelected:true" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeJudgementHeader.create_root_section:judgement"/>	
	          <subaction name="Masthead.selection" title="Create Header from Selection" tooltip="Select some text to mark it up as a Header" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeJudgementHeader.section_creation" visible="true" condition="cursorInSection:judgement :and: textSelected:true"/>
		  <subaction name="Masthead.selection.judgementNo" title="Markup Judgement No" tooltip="Select some text to mark it up as a Judgement No" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeMetadataReference.mark:mBungeniJudgementNo" visible="true" condition="cursorInSection:header :and: textSelected:true"/>
                 	 <subaction name="Masthead.selection.caseNo" title="Markup Case No" tooltip="Select some text to mark it up as a Case No" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeMetadataReference.mark:mBungeniCaseNo" visible="true" condition="cursorInSection:header :and: textSelected:true"/>
		 <!--  <subaction name="Masthead.heading" title="Markup document heading" tooltip="Select text and mark it with a heading style" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeDebateMastheadSection.markup_preface_heading:heading_header" visible="true" condition="cursorInSection:header :and: textSelected:true"  />      -->     
 	    </action>
</actionGroup>
    </root>
</toolbar>
