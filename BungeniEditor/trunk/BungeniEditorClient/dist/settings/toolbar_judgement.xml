<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : toolbar_judgement.xml
    Created on : February 17 2008
    Author     : Ashok Hariharan
    Description:
        Editor Action set for Judgement
-->
<toolbar>
    <root lang="en" title="Editor Actions" visible="true" >
        <actionGroup name="blockActions" title="Structural Markup" visible="true">
    	    <action name="Masthead.selection" tooltip="Header for judgement" title="Header"  target="null" visible="true" condition="none" showChildren="true" >
     	          <subaction name="Root" title="Create Judgement Body" visible="true" condition="sectionNotExists:judgement :and: textSelected:true" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeJudgementHeader.create_root_section:judgement"/>	
	          <subaction name="Masthead.selection" title="Create Header from Selection" tooltip="Select some text to mark it up as a Header" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeJudgementHeader.section_creation" visible="true" condition="cursorInSection:judgement :and: textSelected:true  :and: cursorInSection:judgement"/>
	          <subaction name="Masthead.selection.judgementNo" title="Markup Judgement No" tooltip="Select some text to mark it up as a Judgement No" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeMetadataReference.mark:mBungeniJudgementNo" visible="true" condition="cursorInSection:header :and: textSelected:true"/>
	          <subaction name="Masthead.selection.judgementTitle" title="Markup Judgement Title" tooltip="Mark text as Judgement Title" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeJudgementHeader.make_judgement_title:heading_title" visible="true" condition="cursorInSection:header :and: textSelected:true"/>
                  <subaction name="Masthead.selection.caseNo" title="Markup Case No" tooltip="Select some text to mark it up as a Case No" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeMetadataReference.mark:mBungeniCaseNo" visible="true" condition="cursorInSection:header :and: textSelected:true"/>
                  <subaction name="Masthead.selection.judgementDate" title="Markup Judgement Date" tooltip="Select some text to mark it up as a Judgement Date" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeMetadataReference.mark:mBungeniJudgementDate" visible="true" condition="cursorInSection:header :and: textSelected:true"/>
                  <subaction name="Masthead.selection.judges" title="Markup Judges" tooltip="Select some text to mark it up as a Judge Name" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeJudgementHeader.tabular_judge_reference:BungeniJudgeName" visible="true" condition="cursorInSection:header :and: textSelected:true"/>
                  <subaction name="Masthead.selection.parties" title="Markup Parties" tooltip="Select some text to mark it up as a Judge Name" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeJudgementHeader.tabular_party_reference:BungeniPartyName" visible="true" condition="cursorInSection:header :and: textSelected:true"/>
                  <subaction name="Masthead.selection.hearingDate" title="Markup Hearing Date" tooltip="Select some text to mark it up as a Judge Name" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeJudgementHeader.workflow_action:HearingDate" visible="true" condition="cursorInSection:header :and: textSelected:true"/>
	  </action>
    	    <action name="Introduction.selection" tooltip="Introduction for judgement" title="Introduction"  target="null" visible="true" condition="none" showChildren="true" >
     	          <subaction name="Introduction.create" title="Create Introduction" visible="true" condition="sectionNotExists:intro* :and: textSelected:true  :and: cursorInSection:judgement" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeIntroduction.section_creation"/>	
		  <action name="Introduction.heading" title="Markup Introduction Heading" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeIntroduction.make_introduction_heading:heading_introduction" visible="true" condition="textSelected:true :and: cursorInSection:intro[0-9]*" />
 		  <action name="Introduction.subheading" title="Markup Introduction SubHeading" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeIntroduction.make_introduction_heading:subheading_introduction" visible="true" condition="textSelected:true :and: cursorInSection:intro[0-9]*" />
 		  <action name="Introduction.scale_section" title="Create Introduction (Scaled)" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeIntroduction.scale_section" visible="true" condition="sectionNotExists:intro[0-9]*" />
 	    </action>
	    <action name="Background.selection" tooltip="Background for judgement" title="Background"  target="null" visible="true" condition="none" showChildren="true" >
     	          <subaction name="Background.create" title="Create Background" visible="true" condition="sectionNotExists:bg* :and: textSelected:true  :and: cursorInSection:judgement" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeBackground.section_creation"/>	
		  <action name="Background.heading" title="Markup Background Heading" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeBackground.make_background_heading:heading_background" visible="true" condition="textSelected:true :and: cursorInSection:bg[0-9]*" />
 		  <action name="Background.subheading" title="Markup Background SubHeading" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeBackground.make_background_heading:subheading_background" visible="true" condition="textSelected:true :and: cursorInSection:bg[0-9]*" />
 	    </action>
    	    <action name="Motivation.selection" tooltip="Motivation for judgement" title="Motivation"  target="null" visible="true" condition="none" showChildren="true" >
     	          <subaction name="Motivation.create" title="Create Motivation" visible="true" condition="sectionNotExists:motive* :and: textSelected:true  :and: cursorInSection:judgement" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeMotivation.section_creation"/>	
		  <action name="Motivation.heading" title="Markup Motivation Heading" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeMotivation.make_motivation_heading:heading_motivation" visible="true" condition="textSelected:true :and: cursorInSection:motive[0-9]*" />
 		  <action name="Motivation.subheading" title="Markup Motivation SubHeading" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeMotivation.make_motivation_heading:subheading_motivation" visible="true" condition="textSelected:true :and: cursorInSection:motive[0-9]*" />
 	    </action>
    	    <action name="Decision.selection" tooltip="Decision for judgement" title="Decision"  target="null" visible="true" condition="none" showChildren="true" >
     	          <subaction name="Decision.create" title="Create Decision" visible="true" condition="sectionNotExists:decis* :and: textSelected:true :and: cursorInSection:judgement" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeDecision.section_creation"/>	
		  <action name="Decision.heading" title="Markup Decision Heading" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeDecision.make_decision_heading:heading_decision" visible="true" condition="textSelected:true :and: cursorInSection:decis[0-9]*" />
 		  <action name="Decision.subheading" title="Markup Decision SubHeading" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeDecision.make_decision_heading:subheading_decision" visible="true" condition="textSelected:true :and: cursorInSection:decis[0-9]*" />
 	    </action>
    	    <action name="Conclusion.selection" tooltip="Conclusion for judgement" title="Conclusion"  target="null" visible="true" condition="none" showChildren="true" >
     	          <subaction name="Conclusion.create" title="Create Conclusion" visible="true" condition="sectionNotExists:concl* :and: textSelected:true :and: cursorInSection:judgement" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeConclusion.section_creation"/>	
 	    </action>
	</actionGroup> 
	<actionGroup name="LongSections" title="Markup Long Text" visible="true" tooltip="Use these actions to markup long blocks of text" >
 		  <action name="Introduction.scale_section" title="Create Introduction" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeIntroduction.scale_section" visible="true" condition="sectionNotExists:intro[0-9]* :and: cursorInSection:judgement" />
 		  <action name="Background.scale_section" title="Create Background" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeBackground.scale_section" visible="true" condition="sectionNotExists:bg[0-9]* :and: cursorInSection:judgement" />
 		  <action name="Motivation.scale_section" title="Create Motivation" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeMotivation.scale_section" visible="true" condition="sectionNotExists:motive[0-9]* :and: cursorInSection:judgement" />
 		  <action name="Decision.scale_section" title="Create Decision" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeDecision.scale_section" visible="true" condition="sectionNotExists:decis[0-9]* :and: cursorInSection:judgement" />
	</actionGroup> 
    </root>
</toolbar>
