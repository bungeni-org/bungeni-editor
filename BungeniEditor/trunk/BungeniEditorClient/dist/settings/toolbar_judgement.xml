<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : toolbar_judgement.xml
    Created on : February 17 2008
    Author     : Ashok Hariharan
    Description:
        Editor Action set for Judgement
-->
<toolbar>
    <root lang="en" title="Editor Actions" visible="true" >
        <actionGroup name="blockActions" title="Structural Markup" visible="true">
    	    <action name="Masthead.selection" tooltip="Header for judgement" title="Header"  target="null" visible="true" condition="none" showChildren="true" >
     	          <subaction name="Root" title="Create Judgement Body" visible="true" condition="sectionNotExists:judgement :and: textSelected:true" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeJudgementHeader.create_root_section:judgement"/>	
	          <subaction name="Masthead.selection" title="Create Header from Selection" tooltip="Select some text to mark it up as a Header" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeJudgementHeader.section_creation" visible="true" condition="cursorInSection:judgement :and: textSelected:true"/>
		  <subaction name="Masthead.selection.judgementNo" title="Markup Judgement No" tooltip="Select some text to mark it up as a Judgement No" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeMetadataReference.mark:mBungeniJudgementNo" visible="true" condition="cursorInSection:header :and: textSelected:true"/>
                  <subaction name="Masthead.selection.caseNo" title="Markup Case No" tooltip="Select some text to mark it up as a Case No" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeMetadataReference.mark:mBungeniCaseNo" visible="true" condition="cursorInSection:header :and: textSelected:true"/>
                  <subaction name="Masthead.selection.judgementDate" title="Markup Judgement Date" tooltip="Select some text to mark it up as a Judgement Date" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeMetadataReference.mark:mBungeniJudgementDate" visible="true" condition="cursorInSection:header :and: textSelected:true"/>
                  <subaction name="Masthead.selection.judges" title="Markup Judges" tooltip="Select some text to mark it up as a Judge Name" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeJudgementHeader.tabular_judge_reference:BungeniJudgeName" visible="true" condition="cursorInSection:header :and: textSelected:true"/>
                  <subaction name="Masthead.selection.parties" title="Markup Parties" tooltip="Select some text to mark it up as a Judge Name" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeJudgementHeader.tabular_party_reference:BungeniPartyName" visible="true" condition="cursorInSection:header :and: textSelected:true"/>
	  </action>
    	    <action name="Introduction.selection" tooltip="Introduction for judgement" title="Introduction"  target="null" visible="true" condition="none" showChildren="true" >
     	          <subaction name="Introduction.create" title="Create Introduction" visible="true" condition="sectionNotExists:intro* :and: textSelected:true" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeIntroduction.section_creation"/>	
 	    </action>
	    <action name="Background.selection" tooltip="Background for judgement" title="Background"  target="null" visible="true" condition="none" showChildren="true" >
     	          <subaction name="Background.create" title="Create Background" visible="true" condition="sectionNotExists:bg* :and: textSelected:true" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeBackground.section_creation"/>	
 	    </action>
    	    <action name="Motivation.selection" tooltip="Motivation for judgement" title="Motivation"  target="null" visible="true" condition="none" showChildren="true" >
     	          <subaction name="Motivation.create" title="Create Motivation" visible="true" condition="sectionNotExists:motive* :and: textSelected:true" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeMotivation.section_creation"/>	
 	    </action>
    	    <action name="Decision.selection" tooltip="Decision for judgement" title="Decision"  target="null" visible="true" condition="none" showChildren="true" >
     	          <subaction name="Motivation.create" title="Create Decision" visible="true" condition="sectionNotExists:decis* :and: textSelected:true" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeDecision.section_creation"/>	
 	    </action>
    	    <action name="Conclusion.selection" tooltip="Conclusion for judgement" title="Conclusion"  target="null" visible="true" condition="none" showChildren="true" >
     	          <subaction name="Conclusion.create" title="Create Conclusion" visible="true" condition="sectionNotExists:concl* :and: textSelected:true" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makeConclusion.section_creation"/>	
 	    </action>
	</actionGroup>
    </root>
</toolbar>
