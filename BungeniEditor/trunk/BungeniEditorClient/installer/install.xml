<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<!-- 
    A sample installation file.
    Use it as a base for your own installers :-)
    
    To compile it :
    - go in the bin directory where you installed IzPack
    - call "compile ../sample/install.xml -b ../sample"
-->

<installation version="1.0">

    <!-- 
        The info section.
        The meaning of the tags should be natural ...
    -->
    <info>
        <appname>BungeniEditor installation</appname>
        <appversion>rev383</appversion>
	<appsubpath>BungeniEditor-$APP_VER</appsubpath>
        <authors>
            <author name="UNDESA" email="undesa@parliaments.info"/>
        </authors>
        <url>http://www.bungeni.org</url>
	<javaversion>1.6</javaversion>
    </info>

    <!-- 
        The gui preferences indication.
        Sets the installer window to 640x480. It will not be able to change the size.
    -->
    <guiprefs width="640" height="480" resizable="no"/>

    <!-- 
        The locale section.
        Asks here to include the English and French langpacks.
    -->
    <locale>
        <langpack iso3="eng"/>
    </locale>

    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="LicencePanel.licence" src="LICENCE.TXT"/>
        <res id="InfoPanel.info" src="README.TXT"/>
    </resources>

    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="InfoPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="TargetPanel"/>
        <panel classname="PacksPanel"/>
	<panel classname="SummaryPanel"/>
        <panel classname="InstallPanel"/>
	<panel classname="ShortcutPanel" />
 	<panel classname="SimpleFinishPanel" />
    </panels>

    <!-- 
        The packs section.
        We specify here our packs.
    -->
    <packs>
        <pack name="Base" required="yes">
            <description>BungeniEditor core files</description>
            <file src="README.TXT" targetdir="$INSTALL_PATH"/>
            <file src="LICENCE.TXT" targetdir="$INSTALL_PATH"/>
            <file src="run_gui.sh" targetdir="$INSTALL_PATH"/>
            <file src="run_debate_new.sh" targetdir="$INSTALL_PATH"/>
            <file src="run_debate_edit.sh" targetdir="$INSTALL_PATH"/>
            <file src="run_judgement_edit.sh" targetdir="$INSTALL_PATH"/>
            <file src="run_judgement_new.sh" targetdir="$INSTALL_PATH"/>
            <file src="run_bill_edit.sh" targetdir="$INSTALL_PATH"/>
            <file src="run_bill_new.sh" targetdir="$INSTALL_PATH"/>
            <file src="scripts/main.sh" targetdir="$INSTALL_PATH/scripts"/>
            <file src="scripts/config.sh" targetdir="$INSTALL_PATH/scripts"/>
            <file src="scripts/gui.sh" targetdir="$INSTALL_PATH/scripts"/>
            <file src="scripts/debate_new.sh" targetdir="$INSTALL_PATH/scripts"/>
            <file src="scripts/debate_edit.sh" targetdir="$INSTALL_PATH/scripts"/>
            <file src="scripts/bill_edit.sh" targetdir="$INSTALL_PATH/scripts"/>
            <file src="scripts/bill_new.sh" targetdir="$INSTALL_PATH/scripts"/>
            <file src="scripts/judgement_edit.sh" targetdir="$INSTALL_PATH/scripts"/>
            <file src="scripts/judgement_new.sh" targetdir="$INSTALL_PATH/scripts"/>
            <file src="runEditor.bat" targetdir="$INSTALL_PATH"/>
            <file src="settingsEditor.sh" targetdir="$INSTALL_PATH"/>
            <file src="base" targetdir="$INSTALL_PATH"/>
            <parsable targetfile="$INSTALL_PATH/runEditor.bat"/>
            <parsable targetfile="$INSTALL_PATH/scripts/config.sh"/>
            <parsable targetfile="$INSTALL_PATH/scripts/main.sh"/>	    
            <parsable targetfile="$INSTALL_PATH/settingsEditor.sh"/>
            <executable targetfile="$INSTALL_PATH/settingsEditor.sh"/>
            <executable targetfile="$INSTALL_PATH/run_gui.sh"/>
            <executable targetfile="$INSTALL_PATH/run_debate_edit.sh"/>
            <executable targetfile="$INSTALL_PATH/run_debate_new.sh"/>
            <executable targetfile="$INSTALL_PATH/run_judgement_edit.sh"/>
            <executable targetfile="$INSTALL_PATH/run_judgement_new.sh"/>
            <executable targetfile="$INSTALL_PATH/run_bill_edit.sh"/>
            <executable targetfile="$INSTALL_PATH/run_bill_new.sh"/>
            <!-- The file will be parsed -->
        </pack>
    </packs>

</installation>
